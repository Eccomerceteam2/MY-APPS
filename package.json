{
  "name": "e-aset-tracker",
  "version": "1.0.0",
  "description": "E-Aset Tracker - Asset Management System following PSAK 16 standards",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "asset-management",
    "psak-16",
    "depreciation",
    "accounting",
    "react",
    "nodejs",
    "sqlite"
  ],
  "author": "E-Aset Tracker Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/e-aset-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/your-repo/e-aset-tracker/issues"
  },
  "homepage": "https://github.com/your-repo/e-aset-tracker#readme"
}
